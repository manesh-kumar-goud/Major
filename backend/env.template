# =====================================================
# StockNeuro Backend Environment Variables
# Copy this file to .env and fill in your values
# =====================================================

# App Configuration
APP_NAME=Stock Market Forecasting API
VERSION=2.0.0
DEBUG=False
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration (comma-separated)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# Security
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# RapidAPI Configuration (Yahoo Finance)
RAPIDAPI_BASE_URL=https://yahoo-finance15.p.rapidapi.com/api/v1
RAPIDAPI_HOST=yahoo-finance15.p.rapidapi.com
RAPIDAPI_KEY=your-rapidapi-key-here
API_REQUEST_TIMEOUT=30
API_MAX_RETRIES=3

# Model Configuration
MODEL_CACHE_TTL=3600
DATA_CACHE_TTL=1800
SEQUENCE_LENGTH=60
DEFAULT_PREDICTION_DAYS=30

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_ENABLED=True

# Optuna Configuration
OPTUNA_ENABLED=False
OPTUNA_N_TRIALS=20

# Redis Configuration (optional)
REDIS_URL=
USE_REDIS=False

# Database (optional)
DATABASE_URL=

# =====================================================
# Supabase Configuration
# Get these from: Supabase Dashboard → Settings → API
# =====================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Logging
LOG_LEVEL=INFO














